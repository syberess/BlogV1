@model Blog

<div class="mainbar">
    <div class="article">
        <h1>@Model.Name</h1>

        <div class="clr"></div>
        <p>@Model.Description</p>
        <p>Etiketler: <a href="#">@Model.Tags</a> </p>
        <p>
            <a href="#"><strong>Comments (@Model.CommentCount)</strong></a> <span>&nbsp;&bull;&nbsp;</span> @Model.PublishDate.ToString("dd/MM/yyyy HH:mm") <span>&nbsp;&bull;&nbsp;</span>
        </p>
    </div>
    <div class="article">
        <h2><span>Yorumlar</span> Responses</h2>
        <div class="clr"></div>
        @foreach(var item in ViewBag.Comments){
            <div class="comment">
                <a href="#"><img src="/images/userpic.gif" width="40" height="40" alt="" class="userpic" /></a>
                <p>
                    <a href="#">@item.Name</a> :<br />
                    @item.PublishDate.ToString("dd/MM/yyyy HH:mm")

                </p>
                <p>@item.Message</p>
            </div>
        }
        
        
    </div>
    <div class="article">
        <h2><span>Yorum</span> Yapın</h2>
        <div class="clr"></div>
        <form action="/Blogs/CreateComment" method="post" id="leavereply">
            <ol>
                <input id="blogid" name="blogId" type="hidden" value="@Model.Id"/>
                <li>
                    <label for="name">İsim (zorunlu)</label>
                    <input id="name" name="name" class="text" />
                </li>
                <li>
                    <label for="email">Email Adresi(zorunlu)</label>
                    <input id="email" name="email" class="text" />
                </li>
                
                <li>
                    <label for="message">Mesajın</label>
                    <textarea id="message" name="message" rows="8" cols="50"></textarea>
                </li>
                <li>
                    <input type="image" name="imageField" id="imageField" src="images/submit.gif" class="send" />
                    <div class="clr"></div>
                </li>
            </ol>
        </form>
    </div>
</div>
